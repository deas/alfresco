   <actionSets>
      <actionSet id="folder">
         <action type="simple-link" id="onActionDetails" permission="edit" href="{editMetadataUrl}" label="actions.folder.edit-metadata" />
         <action type="action-link" id="onActionSimpleApprove" permission="simple-approve" label="actions.folder.simple-approve" />
         <action type="action-link" id="onActionSimpleReject" permission="simple-reject" label="actions.folder.simple-reject" />
         <action type="action-link" id="onActionCopyTo" label="actions.folder.copy-to" />

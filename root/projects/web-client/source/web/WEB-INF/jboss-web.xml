<?xml version='1.0' encoding='UTF-8'?>

<!DOCTYPE jboss-web PUBLIC
 "-//JBoss//DTD Web Application 4.2//EN"
 "http://www.jboss.org/j2ee/dtd/jboss-web_4_2.dtd">

<jboss-web>
  <!-- In this sample it is assumed that main data source MySqlDS is configured in standalone.xml -->
  <!-- and activitiIdGeneratorDataSource reuses it. Modify if/as needed -->
   <resource-ref>
      <res-ref-name>jdbc/dataSource</res-ref-name>
      <jndi-name>java:jboss/datasources/MySqlDS</jndi-name>
   </resource-ref>
   <resource-ref>
      <res-ref-name>jdbc/activitiIdGeneratorDataSource</res-ref-name>
      <jndi-name>java:jboss/datasources/MySqlDS</jndi-name>
   </resource-ref>
</jboss-web>

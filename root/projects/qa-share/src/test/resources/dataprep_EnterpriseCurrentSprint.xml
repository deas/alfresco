<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Sprint 25 Data Prep Suite" verbose="1" preserve-order="true" parallel="tests" thread-count="5">
    <groups>
        <run>
            <include name="DataPrep.*"/>

<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="DataPrepSuite" verbose="1" preserve-order="true"
    parallel="tests" thread-count="5">
    <groups>
        <run>
            <exclude name="DataPrep.*" />
            <exclude name="NonGrid" />
            <exclude name=".*Bug.*" />

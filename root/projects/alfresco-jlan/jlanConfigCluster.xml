  </shares>		

  <security>
    <JCEProvider>cryptix.jce.provider.CryptixCrypto</JCEProvider>

    <users>
      <user name="jlansrv">
        <password>jlan</password>
        <comment>System administrator</comment>
        <administrator/>
      </user>
		
      <user name="normal">
        <password>normal</password>
      </user>
    </users>
  </security>
</jlanserver>

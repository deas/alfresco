<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<!-- This suite runs all the FV tests with the application configured to have
     caching enabled. -->
<suite name="SpringSurfFVT_CachingDisabled" verbose="1">
  <parameter name="configFolder" value="cachingDisabled"></parameter>
  <test name="CachingDisabled">
     
    <packages>
      <package name="org.springframework.extensions.surf.test.basic"></package>
    </packages>
    <!-- Uncomment these lines and comment out those above if you just want to test the test setup!
    <classes>
      <class name="org.springframework.extensions.surf.test.TestServerSetup"></class>
      <class name="org.springframework.extensions.surf.test.BasicTest"></class>
    </classes>
    -->  
  </test>
</suite>
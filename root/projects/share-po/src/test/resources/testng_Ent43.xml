<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Alfresco Share 4.3 Tests" verbose="6">
    <groups>
        <run>
            <include name="unit" />
            <include name="alfresco-one" />
            <include name="Enterprise4.2" />
            <include name="Enterprise-only" />
            <exclude name=".*Bug42" />
            <exclude name="Cloud-only" />
            <exclude name=".*Bug" />
            <exclude name="chromeOnly" />
            <exclude name="Hybrid" />
            <exclude name="download" />
        </run>
    </groups>
    <test name="Dashlets">
        <packages>
            <package name="org.alfresco.po.share.dashlet">
                <exclude name="failingTestw">
                    <classes>
                        <class name="org.alfresco.po.share.dashlet.SiteNoticeDashletTest" />
                    </classes>
                </exclude>
            </package>
        </packages>
    </test>
    <test name="SiteContent">
        <packages>
            <package name="org.alfresco.po.share.dashlet.sitecontent" />
        </packages>
    </test>
    <test name="Search">
        <packages>
            <package name="org.alfresco.po.share.search" />
        </packages>
    </test>
    <test name="Site">
        <packages>
            <package name="org.alfresco.po.share.site" />
        </packages>
    </test>
    <test name="Workflow">
        <packages>
            <package name="org.alfresco.po.share.workflow" />
        </packages>
    </test>
    <test name="Task">
        <packages>
            <package name="org.alfresco.po.share.task" />
        </packages>
    </test>
    <test name="Download">
        <packages>
            <package name="org.alfresco.po.share.site.document.download" />
        </packages>
    </test>
    <test name="Document">
        <packages>
            <package name="org.alfresco.po.share.site.document">
                <exclude name="failingTestw">
                    <classes>
                        <class name="org.alfresco.po.share.site.document.TableViewFileDirectoryInfoTest" />
                        <class name="org.alfresco.po.share.site.document.FileDirectoryInfoFilmstripViewTest" />
                        <class name="org.alfresco.po.share.site.document.FileDirectoryInfoGalleryViewTest" />
                        <class name="org.alfresco.po.share.site.document.ManagePermissionsTest" />
                    </classes>
                </exclude>
            </package>
        </packages>
    </test>
    <test name="Share">
        <packages>
            <package name="org.alfresco.po.share" />
        </packages>
    </test>
</suite>
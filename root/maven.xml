        <artifact:mvn mavenVersion="3.0.3">
            <arg value="org.apache.maven.plugins:maven-deploy-plugin:2.7:deploy-file"/>
            <arg value="-Dfile=${dir.continuous.assemble.mmt}/main/main.jar"/>
